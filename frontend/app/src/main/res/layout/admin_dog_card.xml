<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/spacing_view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/admin_dogs_dog_ster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/admin_dogs_dog_image"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_box_terracotta"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/spacing_view"/>

        <TextView
            android:id="@+id/admin_dogs_dog_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost_black"
            android:text="[Dog Name]"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_dogs_dog_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/admin_dogs_dog_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost"
            android:justificationMode="inter_word"
            android:text="Age:"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_dogs_dog_image"
            app:layout_constraintTop_toBottomOf="@+id/admin_dogs_dog_name" />

        <TextView
            android:id="@+id/admin_dogs_dog_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost"
            android:justificationMode="inter_word"
            android:text="Gender:"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_dogs_dog_image"
            app:layout_constraintTop_toBottomOf="@+id/admin_dogs_dog_age" />

        <TextView
            android:id="@+id/admin_dogs_dog_vacc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost"
            android:justificationMode="inter_word"
            android:text="Vaccinated:"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_dogs_dog_image"
            app:layout_constraintTop_toBottomOf="@+id/admin_dogs_dog_gender" />

        <TextView
            android:id="@+id/admin_dogs_dog_ster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/jost"
            android:justificationMode="inter_word"
            android:text="Sterilized:"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/admin_dogs_dog_image"
            app:layout_constraintTop_toBottomOf="@+id/admin_dogs_dog_vacc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
