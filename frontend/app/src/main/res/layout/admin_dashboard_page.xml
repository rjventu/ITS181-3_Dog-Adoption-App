<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DED0C4"
    tools:context=".AdoptionApplicationsPage">

    <!--NAV BAR-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D77A61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/app_title"
        android:layout_width="221dp"
        android:layout_height="36dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/jost"
        android:text="Doggo Forever"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/go_adoption"
        android:layout_width="25.45dp"
        android:layout_height="25.45dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#00FFFFFF"
        android:contextClickable="true"
        android:src="@drawable/paw"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/go_profile"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/go_profile"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="#00FFFFFF"
        android:contextClickable="true"
        android:src="@drawable/user"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- END NAV BAR -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_dashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contextClickable="true"
        android:longClickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stephen_account_rounded_box_white" />

            <TextView
                android:id="@+id/admin_dashboard_welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/jost_black"
                android:text="Welcome! [User]"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_admin_account_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:backgroundTint="#D77A61"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/jost_black"
                android:textColor="#FFFFFF"
                android:text="VIEW PROFILE DETAILS"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_admin_manage_dogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"
                android:backgroundTint="#D77A61"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/jost_black"
                android:textColor="#FFFFFF"
                android:text="MANAGE DOG RECORDS"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_admin_manage_adoptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                android:backgroundTint="#D77A61"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/jost_black"
                android:textColor="#FFFFFF"
                android:text="MANAGE ADOPTION RECORDS"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_admin_account_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="230dp"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/jost_black"
                android:textColor="#D77A61"
                android:text="LOGOUT"
                android:textSize="10sp" />


        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>